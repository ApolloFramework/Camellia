cmake \
  -D TRILINOS_PATH:FILEPATH=$WORK/Trilinos_lib \
  -D CAMELLIA_SOURCE_DIR:FILEPATH="$HOME/Camellia/src" \
  -D CMAKE_BUILD_TYPE="Release" \
  -D CMAKE_EXE_LINKER_FLAGS:STRING="-g -O3 -lifcore" \
  -D CMAKE_CXX_FLAGS:STRING="-O3 -std=c++11" \
  -D MPI_DIR:PATH=$MPICH_HOME \
  -D SCALAPACK_LIB="$TACC_MKL_LIB/libmkl_scalapack_lp64.a;$TACC_MKL_LIB/libmkl_blacs_intelmpi_lp64.a" \
  -D BUILD_CONFUSION_JESSE_DRIVERS:BOOL=OFF \
  -D BUILD_CONDITIONING_EXPERIMENT:BOOL=ON \
  -D BUILD_PRECONDITIONING_DRIVERS:BOOL=ON \
  -D BUILD_TRUMAN_TESTS_DRIVERS:BOOL=OFF \
  -D BUILD_TRUMAN_DRIVERS:BOOL=ON \
  -D BUILD_BRENDAN_DRIVERS:BOOL=ON \
  -D USE_MUMPS:BOOL=ON \
  -D CMAKE_INSTALL_PREFIX="/tmp" \
$CAMELLIA
